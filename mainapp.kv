ScreenManager:
    Authentication:
    MDData:


<IconListItem>

    IconLeftWidget:
        icon: root.icon


<Authentication>:
    name: "auth"

    MDAnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: 1
            size_hint_y: .4
            spacing: 10
            MDLabel:
                text: "Вікно аутентифікації"
                theme_text_color: "Secondary"
                halign: "center"

            MDTextField:
                id: email_input
                hint_text: 'Введіть email'
                helper_text_mode: 'persistent'
                required: True
                size_hint: None, None
                size: "200dp", "30dp"
                pos_hint: {"center_x": 0.5, "y": 1}

            MDTextField:
                id: password_input
                hint_text: 'Введіть пароль'
                helper_text_mode: 'on_error'
                required: True
                password: True
                size_hint: None, None
                size: "200dp", "30dp"
                pos_hint: {"center_x": 0.5, "y": 1}

            MDRaisedButton:
                text: "Продовжити"
                size_hint: None, None
                size: "200dp", "40dp"
                pos_hint: {"center_x": 0.5}
                on_release: root.switch_to_second_screen(email_input.text, password_input.text, error_label)

            MDLabel:
                id: error_label
                text: ''
                them_text_color: 'Error'
                halign: 'center'
                valign: 'bottom'


<MDData>:
    name: "data"